-if flash[:notice]
  .notice
    = flash[:notice]

.new-task
  = button_to "New task", new_task_path, method: :get
.task-list
  %table
    %thead
      %tr
        %th="Description"
        %th="Priority"
        %th="Status"
        %th="Actions"
    %tbody
      -@tasks.each do |task|
        %tr
          %td=task.description
          %td=task.priority
          %td=task.status
          %td
            .actions
              %span="Complete"
              %span="Modify"
              %span="Delete"
